{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": "secretsmanager:GetSecretValue",
      "Resource": "arn:aws:secretsmanager:<region>:<account-id>:secret:<secret-name>"
    },
    {
      "Effect": "Allow",
      "Action": "secretsmanager:ListSecrets"
    }
  ]
}